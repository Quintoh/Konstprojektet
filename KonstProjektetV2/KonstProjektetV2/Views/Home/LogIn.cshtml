
@{
    ViewBag.Title = "LogIn";
}
<h2 style="color: #000;" class="form-signin-heading center">Logga in</h2>

@using (Html.BeginForm())
{
    <div class="container center">
    <div class="row" style="text-align: center;">
        <form class="col l12 col s12 form-signin">
            <div class="row" style="text-align: center;">
                <div class="input-field col l6 offset-l3 col s6 offset-s3">
                    <i class="material-icons prefix">account_circle</i>
                    <input placeholder="Användarnamn" id="inputUsername" name="username" type="text" class="validate">
                </div>
            </div>
            <div class="row" style="text-align: center;">
                <div class="input-field col l6 offset-l3 col s6 offset-s3">
                    <i class="material-icons prefix">lock</i>
                    <input placeholder="Lösenord" id="inputPassword" type="password" name="password" class="validate">
                </div>
            </div>
        </form>
    </div>
        <div class="col l2 offset-l3 col s2 offset-s3 center">
            <input type="submit" class="waves-effect waves-light btn col l12 center" value="Logga in" />
        </div>
</div>
}




<script>
    $(document).ready(function () {
        Materialize.updateTextFields();
    });
</script>