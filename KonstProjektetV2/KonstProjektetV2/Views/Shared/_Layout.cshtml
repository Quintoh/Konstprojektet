            </ul>
            <ul id="nav-mobile" class="right hide-on-med-and-down">
                @{
                    var user = Session["user"] as Admin;
                }
                @if (user == null)
                {
                    <li id="nav-login" @Html.IsActive("Login", "Home", "class=\"active-login\"")>@Html.ActionLink("Logga in", "Login", "Home")</li>
                }
                else
